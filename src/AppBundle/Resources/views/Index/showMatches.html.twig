{% extends '@App/layoutBase.html.twig' %}


{% block index %}

    <div class="well">
        <table class="table table-hover" id="index">
            <tc><h2>All bets</h2></tc>
            <tr>
                <th>Dota2</th>
            </tr>
            <tr>
                <th>Time</th>
                <th>Match</th>
                <th>Odds</th>

            </tr>

            {% for b in dotaBets %}
                <tr>
                    <td>{{ b.betTime|date('d-m-y H:i:s')}}</td>
                    <td>{{ b.homeTeam.name }} - {{ b.awayTeam.name}}</td>
                    <td>
                        <button type="button" class="btn btn-primary" data-toggle="button" value="{{ b.homeOdds }}">{{ b.homeOdds }}</button>
                    </td>
                    <td>
                        <button type="button" class="btn btn-primary" data-toggle="button">X</button>
                    </td>
                    <td>
                        <button type="button" class="btn btn-primary" data-toggle="button" value="{{ b.awayOdds }}">{{ b.awayOdds }}</button>
                    </td>
                </tr>
            {% endfor %}
            <tr>
                <th>CSGO</th>
            </tr>

            {% for b in csgoBets %}
                    <tr>
                        <td>{{ b.betTime|date('d-m-y H:i:s')}}</td>
                        <td>{{ b.homeTeam.name }} - {{ b.awayTeam.name}}</td>
                        <td>{{ b.homeOdds}}</td>
                        <td>{{ b.result}}</td>
                        <td>{{ b.awayOdds}}</td>
                    </tr>
            {% endfor %}
        </table>
        </div>
{% endblock %}
